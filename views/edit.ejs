    <br>
    <br>
    <input type="text" name="image" placeholder="Upload Image" />
    <br>
    <br>
    <input type="text" name="tipe" placeholder="Tips" />
    <br>
    <br>
    <input type="text" name="targets" placeholder="Areas this pose Targets" />
    <br>
    <br>
    <input type="text" name="modifications" placeholder="Try these modifications for safety" />
    <br>
    <br>
    <input class="submit" type="submit" name="" value="Add Yoga Pose" />

    <input type="submit" value="Edit this Pose">
  </form>
